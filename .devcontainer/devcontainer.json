{
    "name": "mpc",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "lldb.executable": "/usr/bin/lldb",
                "files.watcherExclude": {
                    "**/target/**": true
                },
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.checkOnSave.command": "clippy"
            },
            "extensions": [
                "vadimcn.vscode-lldb",
                "rust-lang.rust-analyzer"
            ]
        }
    }
}